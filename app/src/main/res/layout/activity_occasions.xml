<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jeevan.swiggy.activities.OccasionsActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            app:popupTheme="@style/AppTheme.PopupOverlay">

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <!--<android.support.v7.widget.RecyclerView
        android:id="@+id/list_occasions"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:padding="@dimen/general_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>-->

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/holder_chill"
        android:layout_below="@id/appbar"
        android:padding="@dimen/general_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/occasion_icon1"
            android:src="@drawable/occasion_chilling"
            android:layout_width="@dimen/dimen_occasion"
            android:layout_height="@dimen/dimen_occasion" />
        <TextView
            android:id="@+id/occasion_desc1"
            android:layout_toRightOf="@id/occasion_icon1"
            android:layout_marginLeft="@dimen/general_margin"
            android:text="Just chilling, need some snacks! Check this out..."
            android:textColor="@android:color/primary_text_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/holder_hangout"
        android:layout_below="@id/holder_chill"
        android:padding="@dimen/general_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/occasion_icon2"
            android:src="@drawable/occasion_hangout"
            android:layout_width="@dimen/dimen_occasion"
            android:layout_height="@dimen/dimen_occasion" />
        <TextView
            android:id="@+id/occasion_desc2"
            android:layout_toRightOf="@id/occasion_icon2"
            android:layout_marginLeft="@dimen/general_margin"
            android:text="Going on a hangout. Order some quick bites..."
            android:textColor="@android:color/primary_text_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/holder_bday"
        android:layout_below="@id/holder_hangout"
        android:padding="@dimen/general_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/occasion_icon3"
            android:src="@drawable/occasion_bday"
            android:layout_width="@dimen/dimen_occasion"
            android:layout_height="@dimen/dimen_occasion" />
        <TextView
            android:id="@+id/occasion_desc3"
            android:layout_toRightOf="@id/occasion_icon3"
            android:layout_marginLeft="@dimen/general_margin"
            android:text="Birthday party. Here we go..."
            android:textColor="@android:color/primary_text_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</RelativeLayout>
