<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="@dimen/general_margin"
    android:id="@+id/parent"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/rest_icon"
        android:layout_width="@dimen/dimen_occasion"
        android:layout_height="@dimen/dimen_occasion" />

    <TextView
        android:id="@+id/rest_name"
        android:text="Truffles"
        android:textSize="14sp"
        android:textColor="@android:color/primary_text_light"
        android:layout_toRightOf="@id/rest_icon"
        android:layout_marginLeft="@dimen/general_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/rest_cuisines"
        android:text="Pizza, Desserts"
        android:textSize="12sp"
        android:layout_toRightOf="@id/rest_icon"
        android:layout_below="@id/rest_name"
        android:layout_marginLeft="@dimen/general_margin"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>