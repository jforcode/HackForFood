<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/holder"
    android:layout_marginBottom="@dimen/general_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/occasion_icon"
        android:src="@drawable/occasion_chilling"
        android:layout_width="@dimen/dimen_occasion"
        android:layout_height="@dimen/dimen_occasion" />
    <TextView
        android:id="@+id/occasion_desc"
        android:layout_toRightOf="@id/occasion_icon"
        android:layout_marginLeft="@dimen/general_margin"
        android:layout_marginTop="@dimen/general_margin"
        android:text="Just chilling, need some snacks! Check this out..."
        android:textColor="@android:color/primary_text_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>