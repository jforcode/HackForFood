<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_choose_order">

    <Button
        android:id="@+id/create_custom"
        android:text="Create a custom order"
        android:background="@color/orange"
        android:textColor="@android:color/background_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- previous orders -->
    <TextView
        android:id="@+id/label_prev_orders"
        android:layout_below="@id/create_custom"
        android:layout_marginTop="@dimen/general_margin"
        android:text="Previous orders"
        android:textColor="@android:color/primary_text_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/no_prev_orders"
        android:visibility="gone"
        android:text="There are no previous orders by you."
        android:textColor="@android:color/primary_text_light"
        android:gravity="center"
        android:layout_below="@id/label_prev_orders"
        android:layout_marginTop="@dimen/general_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/with_prev_orders"
        android:layout_below="@id/label_prev_orders"
        android:layout_marginTop="@dimen/general_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/order_name"
            android:text="Everyday dinner"
            android:textSize="18sp"
            android:textColor="@color/dark_orange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/total_cost"
            android:text="500"
            android:textSize="18sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:textColor="@color/dark_orange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/rupee_icon"
            android:layout_toLeftOf="@id/total_cost"
            android:src="@drawable/icon_rupee"
            android:layout_alignTop="@id/total_cost"
            android:layout_alignBottom="@id/total_cost"
            android:layout_marginRight="4dp"
            android:layout_width="12dp"
            android:layout_height="12dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_previous"
            android:layout_below="@id/total_cost"
            android:layout_marginTop="@dimen/general_margin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_orders_height">

        </android.support.v7.widget.RecyclerView>

        <Button
            android:id="@+id/btn_checkout_order"
            android:layout_below="@id/list_previous"
            android:text="Add to cart"
            android:paddingLeft="@dimen/general_margin"
            android:paddingRight="@dimen/general_margin"
            android:layout_marginTop="@dimen/general_margin"
            android:background="@android:color/transparent"
            android:textColor="@color/dark_orange"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_show_more_saved"
            android:layout_below="@id/list_previous"
            android:layout_toLeftOf="@id/btn_checkout_order"
            android:text="Show More"
            android:paddingLeft="@dimen/general_margin"
            android:paddingRight="@dimen/general_margin"
            android:layout_marginTop="@dimen/general_margin"
            android:background="@android:color/transparent"
            android:layout_marginRight="@dimen/general_margin"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

